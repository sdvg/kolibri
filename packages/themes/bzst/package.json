{
	"name": "@public-ui/theme-bzst",
	"version": "2.0.1",
	"private": true,
	"scripts": {
		"depcheck": "depcheck --ignore-bin-package --skip-missing --ignores=@types/*",
		"format": "prettier --check src",
		"lint": "eslint src && tsc --noemit",
		"test": "npm-run-all test:*",
		"test:bzst-v1": "THEME_MODULE=../dist THEME_EXPORT=BZStv1 kolibri-visual-test",
		"test-update": "npm-run-all test-update:*",
		"test-update:bzst-v1": "THEME_MODULE=../dist THEME_EXPORT=BZStv1 kolibri-visual-test --update-snapshots theme-snapshots.spec.js",
		"build": "pnpm --filter=\"@public-ui/themes\" build",
		"pretest": "pnpm build",
		"pretest-update": "pnpm build"
	},
	"devDependencies": {
		"@public-ui/schema": "2.0.1",
		"@public-ui/visual-tests": "2.0.1",
		"@types/node": "ts5.3",
		"typescript": "5.3.3"
	},
	"peerDependencies": {
		"@public-ui/components": "2.0.1"
	}
}
